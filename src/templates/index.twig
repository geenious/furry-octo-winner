{% extends "_layouts/cp" %}

{% import '_includes/forms.twig' as forms %}

{% set title = "Weather" %}

{% block content %}

  {{ forms.textField({
    first: false,
    label: 'Latitude',
    name: 'lat',
    value: ''
  }) }}

  {{ forms.textField({
    first: false,
    label: 'Longitude',
    name: 'lon',
    value: ''
  }) }}

  {% set options = [
    {
      key: 'imperial',
      option: 'Imperial'
    },
    {
      key: 'metric',
      option: 'Metric',
    }
  ] %}

  {{ forms.selectField({
    first: false,
    label: 'Unit of Measurement',
    name: 'units',
    value: '',
    options: {
      imperial: 'Imperial',
      metric: 'Metric'
    }
  }) }}


{% endblock %}